{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Type-check frontend",
			"type": "shell",
			"command": "bunx tsc -p frontend --noEmit",
			"group": "build"
		},
		{
			"label": "Type-check frontend with npm",
			"type": "shell",
			"command": "npm run -w frontend -s build",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}